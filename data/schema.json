{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "groupBinding": {
      "type": "object",
      "properties": {
        "chatId": { "type": "number" },
        "title": { "type": "string" },
        "threadId": { "type": "number" }
      },
      "required": ["chatId", "title"],
      "additionalProperties": false
    },
    "courierCard": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "adminId": { "type": "number" },
        "orderId": { "type": "string" },
        "customerName": { "type": "string" },
        "earningsLastWeek": { "type": "number" },
        "profileLink": { "type": "string" },
        "address": { "type": "string" },
        "window": { "type": "string" },
        "paymentType": { "type": "string" },
        "comment": { "type": "string" },
        "courierPhone": { "type": "string" },
        "courierFullName": { "type": "string" },
        "courierTelegramId": { "type": "number" },
        "status": { "enum": ["pending", "sent", "skipped", "error"] },
        "uploadedAt": { "type": "string" },
        "sentAt": { "type": "string" },
        "messageId": { "type": "number" },
        "chatId": { "type": "number" },
        "report": { "type": "string" }
      },
      "required": ["id", "adminId", "uploadedAt"],
      "additionalProperties": false
    },
    "deliveryRecord": {
      "allOf": [
        { "$ref": "#/definitions/courierCard" },
        {
          "type": "object",
          "properties": {
            "report": { "type": "string" }
          },
          "additionalProperties": false
        }
      ]
    },
    "announcement": {
      "type": "object",
      "properties": {
        "adminId": { "type": "number" },
        "target": { "$ref": "#/definitions/groupBinding" },
        "message": { "type": "string" },
        "sentAt": { "type": "string" }
      },
      "required": ["adminId", "target", "message", "sentAt"],
      "additionalProperties": false
    },
    "adminTableRow": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "orderId": { "type": "string" },
        "customerName": { "type": "string" },
        "normalizedFullName": { "type": "string" },
        "phone": { "type": "string" },
        "earningsLastWeek": { "type": "number" },
        "profileLink": { "type": "string" },
        "address": { "type": "string" },
        "window": { "type": "string" },
        "paymentType": { "type": "string" },
        "comment": { "type": "string" }
      },
      "required": ["id"],
      "additionalProperties": false
    },
    "adminTableMetadata": {
      "type": "object",
      "properties": {
        "uploadedAt": { "type": "string" },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              { "type": "string" },
              { "type": "null" }
            ]
          }
        },
        "rows": {
          "type": "array",
          "items": { "$ref": "#/definitions/adminTableRow" }
        }
      },
      "required": ["uploadedAt", "headers", "rows"],
      "additionalProperties": false
    },
    "userRecord": {
      "type": "object",
      "properties": {
        "telegramId": { "type": "number" },
        "username": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "phone": { "type": "string" },
        "normalizedPhone": { "type": "string" },
        "phoneValidated": { "type": "boolean" },
        "createdAt": { "type": "string" },
        "updatedAt": { "type": "string" },
        "lastTaskRequestAt": { "type": "string" }
      },
      "required": ["telegramId", "createdAt", "updatedAt"],
      "additionalProperties": false
    },
    "courierRecord": {
      "type": "object",
      "properties": {
        "telegramId": { "type": "number" },
        "username": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "fullName": { "type": "string" },
        "phone": { "type": "string" },
        "createdAt": { "type": "string" },
        "updatedAt": { "type": "string" },
        "awaitingFullName": { "type": "boolean" },
        "adminIds": {
          "type": "array",
          "items": { "type": "number" }
        },
        "lastCards": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "$ref": "#/definitions/courierCard" }
          }
        },
        "announcementTargets": {
          "type": "array",
          "items": { "$ref": "#/definitions/groupBinding" }
        }
      },
      "required": ["telegramId", "createdAt", "updatedAt", "adminIds", "lastCards"],
      "additionalProperties": false
    },
    "adminRecord": {
      "type": "object",
      "properties": {
        "telegramId": { "type": "number" },
        "username": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "createdAt": { "type": "string" },
        "updatedAt": { "type": "string" },
        "lastUploadAt": { "type": "string" }
      },
      "required": ["telegramId", "createdAt", "updatedAt"],
      "additionalProperties": false
    }
  },
  "stores": {
    "users": {
      "type": "object",
      "properties": {
        "version": { "const": 1 },
        "users": {
          "type": "array",
          "items": { "$ref": "#/definitions/userRecord" }
        }
      },
      "required": ["version", "users"],
      "additionalProperties": false
    },
    "adminTables": {
      "type": "object",
      "properties": {
        "version": { "const": 1 },
        "tables": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/adminTableMetadata" }
        }
      },
      "required": ["version", "tables"],
      "additionalProperties": false
    },
    "couriers": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/courierRecord" }
    },
    "admins": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/adminRecord" }
    },
    "deliveries": {
      "type": "object",
      "properties": {
        "version": { "const": 1 },
        "items": {
          "type": "object",
          "properties": {
            "history": {
              "type": "array",
              "items": { "$ref": "#/definitions/deliveryRecord" }
            },
            "byCourier": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": { "$ref": "#/definitions/deliveryRecord" }
              }
            }
          },
          "required": ["history", "byCourier"],
          "additionalProperties": false
        }
      },
      "required": ["version", "items"],
      "additionalProperties": false
    },
    "groupBindings": {
      "type": "object",
      "properties": {
        "version": { "const": 1 },
        "bindings": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "$ref": "#/definitions/groupBinding" }
          }
        }
      },
      "required": ["version", "bindings"],
      "additionalProperties": false
    },
    "announcements": {
      "type": "array",
      "items": { "$ref": "#/definitions/announcement" }
    }
  }
}
